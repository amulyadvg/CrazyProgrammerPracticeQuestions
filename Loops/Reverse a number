#include <iostream>
#include<math.h>

using namespace std;

int main() {
  long num, rem;
  long rev = 0;
  
  cout << "Enter number: " << endl;
  cin >> num;
  
  while (num != 0) {
    rem = num % 10;
    rev = (rev*10) + rem;
    num = num / 10;
  }
  cout << "Reversed number: " << rev << endl;
  
return 0;
}
