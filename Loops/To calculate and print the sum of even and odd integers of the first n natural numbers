#include <iostream>
#include<math.h>

using namespace std;

int main() {
  int num;
  int sumEven = 0;
  int sumOdd = 0;
  
  cout << "Enter number: " << endl;
  cin >> num;
  
  for (int i = 1; i <= num; i++) {
  if (i % 2 == 0) 
    sumEven += i;
  else
    sumOdd += i;
  }
  
  cout << "Sum of even bits: " << sumEven << endl;
  cout << "Sum of odd bits: " << sumOdd << endl;

return 0;
}

